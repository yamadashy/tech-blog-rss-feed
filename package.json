{
  "name": "tech-blog-rss-feed",
  "description": "企業のテックブログの更新をまとめたRSSフィードを配信",
  "version": "1.0.0",
  "main": "",
  "scripts": {
    "build": "npm run feed-generate && npm run site-build",
    "feed-generate": "tsx src/cli/generate-feed-command.ts",
    "register-index": "tsx src/cli/register-index-command.ts",
    "site-prepare": "tsx src/cli/prepare-site-command.ts",
    "site-build": "tsx ./node_modules/.bin/eleventy --config=eleventy.config.ts",
    "site-serve": "tsx ./node_modules/.bin/eleventy --config=eleventy.config.ts --serve",
    "lint": "npm run lint-biome && npm run lint-ts && npm run lint-secretlint",
    "lint-biome": "biome check --write",
    "lint-ts": "tsc --noEmit",
    "lint-secretlint": "secretlint '**/*'",
    "test": "vitest run",
    "test-coverage": "vitest run --coverage --exclude 'tests/external/**/*'",
    "test-external": "vitest run -c ./vitest.external.config.ts",
    "test-internal": "vitest run --exclude 'tests/external/**/*'",
    "renovate-validate": "renovate-config-validator"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/yamadashy/tech-blog--rss-feed.git"
  },
  "bugs": {
    "url": "https://github.com/yamadashy/tech-blog-rss-feed/issues"
  },
  "type": "module",
  "author": "yamadashy",
  "license": "MIT",
  "keywords": [
    "blog",
    "tech blog",
    "engineer blog",
    "engineering blog",
    "feed",
    "rss",
    "atom"
  ],
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-fetch": "^5.1.0",
    "@11ty/eleventy-img": "^5.0.0",
    "@biomejs/biome": "^1.9.4",
    "@secretlint/core": "^9.3.4",
    "@secretlint/secretlint-rule-preset-recommend": "^9.3.4",
    "@supercharge/promise-pool": "^3.2.0",
    "@types/11ty__eleventy-img": "^4.0.0",
    "@types/async-retry": "^1.4.9",
    "@types/clean-css": "^4.2.11",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/http-server": "^0.12.4",
    "@types/node": "^22.19.1",
    "@types/open-graph-scraper": "^4.8.5",
    "@vitest/coverage-v8": "^3.2.4",
    "async-retry": "^1.3.3",
    "await-to-js": "^3.0.0",
    "axios": "^1.13.2",
    "clean-css": "^5.3.3",
    "dayjs": "^1.11.19",
    "fast-xml-parser": "^4.5.3",
    "feed": "^4.2.2",
    "flat-cache": "^6.1.18",
    "googleapis": "^144.0.0",
    "html-minifier-terser": "^7.2.0",
    "http-server": "^14.1.1",
    "log4js": "^6.9.1",
    "open-graph-scraper": "^6.10.0",
    "rss-parser": "^3.13.0",
    "secretlint": "^9.3.4",
    "sharp-ico": "^0.1.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  }
}
