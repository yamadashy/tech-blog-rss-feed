{
  "name": "tech-blog-rss-feed",
  "description": "企業のテックブログの更新をまとめたRSSフィードを配信",
  "version": "1.0.0",
  "main": "",
  "scripts": {
    "build": "yarn feed-generate && yarn site-build",
    "feed-generate": "node --require esbuild-register src/feed/generate-feed-command.ts",
    "register-index": "node --require esbuild-register src/feed/register-index-command.ts",
    "site-build": "eleventy",
    "site-serve": "eleventy --serve",
    "lint": "eslint ./src ./tests --max-warnings 0 --ext .ts --cache --format friendly",
    "lint-fix": "yarn lint --fix",
    "type-check": "yarn tsc --noEmit",
    "test": "vitest run",
    "preinstall": "typesync || :"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/yamadashy/tech-blog--rss-feed.git"
  },
  "bugs": {
    "url": "https://github.com/yamadashy/tech-blog-rss-feed/issues"
  },
  "author": "yamadashy",
  "license": "MIT",
  "keywords": [
    "blog",
    "tech blog",
    "engineer blog",
    "engineering blog",
    "feed",
    "rss",
    "atom"
  ],
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-img": "^2.0.0",
    "@supercharge/promise-pool": "^2.1.0",
    "@types/async-retry": "^1.4.3",
    "@types/eslint": "^8.4.1",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/html-minifier-terser": "^6.1.0",
    "@types/http-server": "^0.12.1",
    "@types/node": "^17.0.17",
    "@types/prettier": "^2.6.2",
    "@types/request": "^2.48.8",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "async-retry": "^1.3.3",
    "await-to-js": "^3.0.0",
    "axios": "^0.27.2",
    "dayjs": "^1.10.7",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "feed": "^4.2.2",
    "googleapis": "^100.0.0",
    "html-minifier-terser": "^7.0.0-alpha.1",
    "http-server": "^14.1.0",
    "log4js": "^6.5.2",
    "open-graph-scraper": "^4.11.0",
    "prettier": "^2.5.1",
    "request": "^2.88.2",
    "rss-parser": "^3.12.0",
    "typescript": "^4.7.2",
    "typesync": "^0.9.1",
    "vitest": "^0.12.9"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": true,
    "trailingComma": "all",
    "quoteProps": "consistent"
  },
  "engines": {
    "node": ">=14",
    "yarn": "^1.18.0"
  }
}
